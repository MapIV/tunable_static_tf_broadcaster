<?xml version="1.0"?>
<launch>
  <arg name="parent_frame"/>
  <arg name="child_frame"/>
  <!-- base_link -->
  <node name="tf_tune" pkg="tunable_static_tf_broadcaster" type="tunable_static_tf_broadcaster_node.py" >
    <param name="rate" value="10.0" type="double" /> <!-- tfの更新レート[Hz]-->
    <param name="header_frame" value="$(arg parent_frame)" type="string" /> <!-- tfのヘッダフレームID -->
    <param name="child_frame" value="$(arg child_frame)" type="string" /> <!-- tfの子フレームID-->
    
  </node>

  <!-- 設定用rqt_reconfigure -->
  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" />


</launch>
